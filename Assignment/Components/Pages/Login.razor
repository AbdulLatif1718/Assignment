@page "/"
@layout BlazorSupplier.WebUI.Components.Layout.LoginLayout
@inject NavigationManager Navigation

<title>Signin</title>

<style>
    .login-container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        background-color: #f7f7f7;
    }

    .form-signin {
        width: 100%;
        max-width: 400px;
        padding: 30px;
        margin: auto;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .form-signin img {
        margin-bottom: 20px;
        border-radius: 50%;
    }

    .form-signin h1 {
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .form-signin label {
        display: block;
        margin-bottom: 10px;
        text-align: left;
        font-size: 14px;
    }

    .form-signin input[type="email"],
    .form-signin input[type="password"] {
        width: 100%;
        padding: 12px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .form-signin .checkbox {
        margin-bottom: 20px;
        text-align: left;
    }

    .form-signin button {
        width: 100%;
        padding: 12px;
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        color: white;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .form-signin button:hover {
        background-color: #0056b3;
    }

    .form-signin p {
        margin-top: 20px;
        color: #999;
        font-size: 14px;
    }
</style>

<div class="login-container">
    <form class="form-signin" action="/home" @onsubmit="Authenticate">
        <img class="mb-4" src="logo.png" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="inputEmail">Email address</label>
        <input type="email" id="inputEmail" @bind="email" placeholder="Email address" required autofocus class="form-control">
        <label for="inputPassword">Password</label>
        <input type="password" id="inputPassword" @bind="password" placeholder="Password" required class="form-control">
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <button type="submit" class="btn btn-primary">Sign in</button>
        <p class="mt-5 mb-3 text-muted">&copy; 2023</p>
    </form>
</div>

@code {
private string email;
private string password;

private void Authenticate()
{
if (email == "user@gmail.com" && password == "user1234")
{
Navigation.NavigateTo("/home");
}
else
{
// Handle invalid credentials
}
}
}
